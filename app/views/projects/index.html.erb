
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body p-3">
          <h1 class="text-center text-success">Lista de proyectos</h1>
          <div class="h5 text-success">Bienvenido <%= current_user.username %>!</div>

      
          <div class="list">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">State</th>
                <th scope="col">Start date</th>
                <th scope="col">End date</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @projects.each do |project| %>
                <tr>
                  <td><%= project.name %></td>
                  <td><%= project.description %></td>
                  <td><%= project.state %></td>
                  <td><%= project.start_date %></td>
                  <td><%= project.end_date %></td>
                  <td><%= link_to 'Show', project %></td>
                  <td><%= link_to 'Edit', edit_project_path(project) %></td>
                  <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          </div>

          <br><br>

          <h4>Filtrar proyectos por estado</h4>

<%= form_tag(url: projects_path, method: :get) do %>
  <div class="input-group">
    <%= select_tag :state, options_for_select([['propuesta'], ['terminado']]) %>
    <%= submit_tag %>
  </div>
<% end %>
          <%= link_to 'Ver lista completa de projectos', root_path %>

        </div>
      </div>
    </div>
  </div>
</div>  

