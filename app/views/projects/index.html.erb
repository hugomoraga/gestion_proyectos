
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body p-3">
          <h1 class="text-center text-success">Lista de proyectos</h1>
               <div class="h5 text-success">Bienvenido <%= current_user.username %>!</div> </span>
             
    
            <div class="row">
              <div class="col-md-6">
                  <div class="form-group">
                    <%= form_tag(projects_path, method: "get") do %>
                    <%= select_tag :q, options_for_select([['Todos', :todos ],['Propuesta', :propuesta ],['En progreso', :'en progreso' ],['Terminado', :terminado ]]), class:'form-control',  onchange: 'this.form.submit();', prompt: "Buscar por estado" %>
                    <% end %>
                 </div>
              </div>
            
            </div>


      
          <div class="list">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">State</th>
                <th scope="col">Start date</th>
                <th scope="col">End date</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @projects.each do |project| %>
                <tr>
                  <td><%= project.name %></td>
                  <td><%= project.description %></td>
                  <td><%= project.state %></td>
                  <td><%= project.start_date %></td>
                  <td><%= project.end_date %></td>
                  <td><%= link_to 'Show', project %></td>
                  <td><%= link_to 'Edit', edit_project_path(project) %></td>
                  <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          </div>

          <br><br>



          <%= link_to 'Ver lista completa de projectos', root_path %>

        </div>
      </div>
    </div>
  </div>
</div>  

